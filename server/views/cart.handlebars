<header>
    <h1>Coder Shop</h1>
    <nav>
        <a href="/products">volver para atras</a>
    </nav>
</header>
<main>
    <section>
        <h2>Cart</h2>
        {{#if cart.products.length}}
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Code</th>
                    <th>Stock</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart.products}}
                <tr>
                    <td>{{this.product.title}}</td>
                    <td>{{this.product.description}}</td>
                    <td>${{this.product.price}}</td>
                    <td>{{this.product.code}}</td>
                    <td>{{this.product.stock}}</td>
                    <td>{{this.product.category}}</td>
                </tr>   
                {{/each }}
            </tbody>
        </table>
        {{else}}
        <p>No hay productos</p>
        {{/if}}
    </section>
</main>
